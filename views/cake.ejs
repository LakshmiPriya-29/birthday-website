<%- include('partials/header') %>

<style>
  .cake-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 60px;
  }

  .cake-wrapper {
    position: relative;
    width: 200px;
    height: auto;
  }

  .cake-image {
    width: 100%;
    border-radius: 20px;
  }

  .flame {
    width: 20px;
    height: 30px;
    background: orange;
    border-radius: 50%;
    position: absolute;
    top: 10px;       /* Adjust this to place it above the candle */
    left: 90px;      /* Adjust based on your image */
    animation: flicker 0.2s infinite alternate;
  }

  @keyframes flicker {
    0% { opacity: 1; transform: scaleY(1); }
    100% { opacity: 0.6; transform: scaleY(1.2); }
  }

  .message {
    display: none;
    margin-top: 20px;
    font-size: 1.5rem;
    color: #d63384;
    background: #ffe6f0;
    padding: 15px 25px;
    border-radius: 15px;
  }

  .confetti {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 9999;
  }

  .blow-btn {
    margin-top: 30px;
    background: #ff69b4;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 1rem;
    border-radius: 8px;
    cursor: pointer;
  }
</style>

<div class="cake-container">
  <h2>ðŸŽ‚ Blow the candle!</h2>

  <div class="cake-wrapper">
    <img src="/cake.png" alt="Birthday Cake" class="cake-image">
    <div class="flame" id="flame"></div>
  </div>

  <button class="blow-btn" onclick="blowCandle()">Blow Candle ðŸŽˆ</button>
  <div class="message" id="message">ðŸ¥³ Yay! You blew the candle! Wishing you a magical birthday! ðŸ’–</div>
</div>

<canvas class="confetti" id="confettiCanvas"></canvas>

<script>
  function blowCandle() {
    document.getElementById('flame').style.display = 'none';
    document.getElementById('message').style.display = 'block';
    launchConfetti();
  }

  function launchConfetti() {
    const duration = 2 * 1000;
    const end = Date.now() + duration;

    const colors = ['#bb0000', '#ffffff', '#ff69b4', '#ffd700'];

    (function frame() {
      confetti({
        particleCount: 5,
        angle: 60,
        spread: 55,
        origin: { x: 0 },
        colors: colors
      });
      confetti({
        particleCount: 5,
        angle: 120,
        spread: 55,
        origin: { x: 1 },
        colors: colors
      });

      if (Date.now() < end) {
        requestAnimationFrame(frame);
      }
    })();
  }
</script>

<!-- Load confetti library -->
<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>

